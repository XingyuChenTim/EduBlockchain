extends layout

block content
  .container

    h1 SHA256 #{__('Hash')}
    .well#well1
      form.form-horizontal

        .form-group
          label.col-sm-2.control-label(for='data') #{__('Transaction (Merkle Tree)')}:
          .col-sm-10
            textarea#data.form-control(rows='10', onkeyup='$("#hash").val(sha256())')

        .form-group
          label.col-sm-2.control-label(for='hash') #{__('Hash')}:
          .col-sm-10
            input#hash.form-control(type='text', disabled)

    .well#well2
      form.form-horizontal

        .form-group
          label.col-sm-2.control-label(for='data1') #{__('Transaction (Merkle Tree)')}:
          .col-sm-10
            textarea#data1.form-control(rows='20', onkeyup='$("#hash1").val(sha256())')

        .form-group
          label.col-sm-2.control-label(for='hash1') #{__('Hash')}:
          .col-sm-10
            input#hash1.form-control(type='text', disabled)

  script.
    function getText(block, chain) {
      return $('#data').val() + $('#data1').val();
    }

    $("#hash").val(sha256());
    $("#hash1").val(sha256());
